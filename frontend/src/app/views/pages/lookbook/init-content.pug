 div(class="for-content")
    div(class="for-item" data-aos="fade-right")
        a(data-fslightbox href="./images/lookbook/lookbook_1.jpg")
            img(src="./images/lookbook/lookbook_1.jpg", alt="")
    div(class="for-item" data-aos="fade-up")
        a(data-fslightbox href="./images/lookbook/lookbook_2.jpg")
            img(src="./images/lookbook/lookbook_2.jpg", alt="")
    div(class="for-item" data-aos="fade-left")
        a(data-fslightbox href="./images/lookbook/lookbook_3.jpg")
            img(src="./images/lookbook/lookbook_3.jpg", alt="")
    div(class="for-item for-item--small" data-aos="fade-right")
        a(data-fslightbox href="./images/lookbook/lookbook_4.jpg")
            img(src="./images/lookbook/lookbook_4.jpg", alt="")
    div(class="for-item for-item--big" data-aos="fade-left")
        a(data-fslightbox href="./images/lookbook/lookbook_5.jpg")
            img(src="./images/lookbook/lookbook_5.jpg", alt="")
    div(class="for-item for-item--small" data-aos="fade-right")
        a(data-fslightbox href="./images/lookbook/lookbook_6.jpg")
            img(src="./images/lookbook/lookbook_6.jpg", alt="")

